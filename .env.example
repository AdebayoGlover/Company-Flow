# Database Configuration
DB_HOST=localhost        # Where your MongoDB server runs
DB_USER=your_username    # MongoDB username
DB_PASSWORD=your_password # MongoDB password
DB_NAME=company_flow    # Your database name
DB_PORT=27017          # MongoDB default port

# Server Configuration
PORT=3000              # The port your backend server will run on
NODE_ENV=development   # Tells app it's in development mode

# JWT Secret
JWT_SECRET=your_jwt_secret  # Secret key for creating login tokens